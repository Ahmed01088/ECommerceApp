            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/arrowrith" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
